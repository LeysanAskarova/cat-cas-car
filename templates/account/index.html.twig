{% extends 'base_content.html.twig' %}

{% block title %} Личный кабинет {% endblock %}
{% block content_row_class %}{% endblock %}

{% block content %}
    <div class="card border rounded-lg mb-4 shadow-sm bg-white">
        <div class="card-header">
            <div class="row">
                <div class="col-sm-2">
                    <img src="{{ app.user.avatarurl }}" style="width: 150px;">
                </div> 
                <div class="col-sm-10">
                    <div class="d-flex align-items-center justify-content-between h-100 m-3">
                        <h3 class="align-self-center mb-0 ">Привет, {{ app.user.firstname }}!!!</h3>
                        <a class="btn btn-labeled btn-info align-self-center text-white" href="#">
                            <span class="btn-label"><i class="fas fa-edit">Профиль</i></span>
                        </a>
                    </div>
                </div> 
            </div> 
        </div>

        <div class="card-body"> 
            <div class="row overview">
                <div class="col-md-4 user-pad text-center">
                    <h3>Текст1</h3>
                    <h4 class="text-muted">100</h4>
                </div>

                <div class="col-md-4 user-pad text-center">
                    <h3>Комментариев</h3>
                    <h4 class="text-muted">200</h4>
                </div>

                <div class="col-md-4 user-pad text-center">
                    <h3>Текст2</h3>
                    <h4 class="text-muted">300</h4>
                </div>
            </div>
        </div>
    </div>    
{% endblock %}